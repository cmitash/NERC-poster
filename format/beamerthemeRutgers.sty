\setbeamercolor{title in headline}{fg=titleWhite}
\setbeamercolor{author in headline}{fg=authorWhite}
\setbeamercolor{institute in headline}{fg=authorWhite}

\setbeamercolor{framesubtitle}{fg=unryellow1,bg=DarkSlateGray}
\setbeamercolor{author in head/foot}{fg=unryellow1, bg=black}
\setbeamercolor{title in head/foot}{fg=unrorange2, bg=black}

\setbeamercolor{normal text}{fg=black, bg=white}
